<article class="card p-4">
  <div class="bs-callout bs-callout-warning d-none">
    <h4>Oh snap!</h4>
    <p>This form seems to be invalid :(</p>
  </div>

  <div class="bs-callout bs-callout-info d-none">
    <h4>Yay!</h4>
    <p>Everything seems to be ok :)</p>
  </div>

  <form id="new-app-form" data-parsley-validate="">
    <div>
      <label class="form-title" for="job_title">Job Title:</label>
      <input type="text" class="form-control" name="job_title" required="" />
    </div>
    <div>
      <label class="form-title" for="company_name">Company Name:</label>
      <input type="text" class="form-control" name="company_name" data-parsley-trigger="change" required="" />
    </div>
    <div>
      <label class="form-title" for="app_url">App url:</label>
      <input type="url" class="form-control" name="app_url" required="" />
    </div>
    <label class="form-title" for="app_language">Language(s) (Optional):</label>
    <div class="col-md-4 offset-md-4">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langJS" value="JavaScript"
          data-parsley-mincheck="2">
        <label class=" form-check-label" for="langJS">
          JavaScript
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langHTML" value="HTML">
        <label class="form-check-label" for="langHTML">
          HTML
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langCSS" value="CSS">
        <label class="form-check-label" for="langCSS">
          CSS
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langPyt" value="Python">
        <label class="form-check-label" for="langPyt">
          Python
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langCSharp" value="C#">
        <label class="form-check-label" for="langCSharp">
          C#
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="languages[]" id="langOther" value="other">
        <label class="form-check-label" for="langOther">
          Other
        </label>
      </div>
    </div>

    {{!-- <p>
      <label for="app_status">App Status:</label>
      <select id="app_status" required="">
        <option value="">Choose..</option>
        <option value="await">Awaiting Email</option>
        <option value="followup">Follow-up Email Required</option>
        <option value="interview">Waiting for an Interview</option>
        <option value="declined">Declined</option>
      </select>
    </p> --}}

    <br>
    <input type="submit" class="btn btn-primary" value="validate">

  </form>
</article>

<script type="text/javascript">
  $(function () {
    $('#new-app-form').parsley().on('field:validated', function () {
      var ok = $('.parsley-error').length === 0;
      $('.bs-callout-info').toggleClass('d-none', !ok);
      $('.bs-callout-warning').toggleClass('d-none', ok);
    })
  });
</script>

