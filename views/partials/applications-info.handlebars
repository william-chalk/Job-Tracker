<div class="card mb-2">
  <article class="applications-info">
    <div class="card-header job_title">
      <h3 class="card-header">{{job_title}}</h3>
    </div>
    <div class="card-body">
      <a href="{{app_url}}" target="_blank">{{company_name}}</a>
      <span>({{app_url}})</span>
      <div class="meta">
        <p>Languages: {{app_language}}</p>
      </div>
      <a class="btn btn-info" href="/application/{{id}}/edit" class="edit-link">Edit application</a>
      <button data-id="{{id}}" class="btn btn-danger delete-app-btn">Delete Application</button>
    </div>
  </article>
</div>